<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs')  %>

<body>

    <% const name = 'mario' %>

    <%- include('./partials/nav.ejs')  %>

    <div class="blogs content">
        <h2>All Blogs</h2>
        <% if (blogs.length > 0){ %>
            <% blogs.forEach(blog =>{ %>
                

                <a class="single" href="/blog/<%= blog.id %>/create">
                    <h3 class="title"><%= blog.title %></h3>
                    <p class="snippet"><%= blog.snippet %></p>
                </a>
                <% }) %>
            <% }else{ %>
                <h3 class="title">Nothing to see here for now</h3>
                <% } %>
    </div>
    <%- include('./partials/footer.ejs')  %>
</body>
</html>